<body>

    <div class="topnav">
        <img src="/images/logoacad.png" style="width:100px;height:90px;">
        <a href="/">Home</a>
        <a href="/about" class="active">About</a>
        <a href="/contacts" >Contacts</a>
        <a href="/add-about" >Add Info</a>
    </div>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% for(let i=0; i<card.length; i++){ %>
          <li data-target="#myCarousel" data-slide-to="<%=i%>" class="<%= i===0 ? 'active' : '' %>"></li>
        <% } %>
      </ol>
      <div class="carousel-inner">
        <% for(let i=0; i<card.length; i++){ %>
          <div class="carousel-item <%= i===0 ? 'active' : '' %>" style="background-image: url(<%=card[i].image%>);">
            
            <div class="carousel-caption">
              <a class="fa fa-edit" style="font-size:24px" href="/editabout/<%=card[i].id%>"></a>
              <button class="fa fa-trash" style="font-size:24px" onclick="deleteAbout(<% card[i].id %>)"></button>
              <h2><%=card[i].heading%></h2>
              <p><%=card[i].body%></p>
            </div>
          </div>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

