                  <% if (row.type === 'Facebook') { %>
                    <h2 class="emergency_text"><%= row.type %></h2>
                    <button style="background-color: #165fbe;"><a href="<%= row.details %>" target="_blank"><h1 style="font-weight: bold; color: white;">Click here to visit our Facebook page</h1></a></button>
                  <% } else { %>
                    <h2 class="emergency_text"><%= row.type %></h2>
                    <h1 class="call_text"><%= row.details %></h1>
                    <h3 class="dolor_text"><%= row.preference %></h3>
                  <% } %>
                </div>
              </div>
            <% }); %>


    
          </div>
