/* Desktop Navbar */
@media (min-width: 768px) {
  .mobile-nav {
    display: none;
  }

  .topnav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90px;
    padding: 0 20px;
    background-color: #3688f4;
    color: white;
  }

  .topnav a {
    color: white;
    text-decoration: none;
    margin-left: 20px;
    font-size: 18px;
  }

  .topnav a.active {
    font-weight: bold;
  }

  .topnav a:hover {
    text-decoration: underline;
  }
}

/* Mobile Navbar */
@media (max-width: 767px) {
  .topnav {
    display: none;
  }

  .mobile-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90px;
    padding: 0 20px;
    background-color: #3688f4;
    color: white;
  }

  .mobile-nav img {
    width: 100px;
    height: 90px;
  }

  .icon {
    font-size: 28px;
    cursor: pointer;
  }

  #myLinks {
    display: none;
    position: absolute;
    top: 90px;
    left: 0;
    right: 0;
    background-color: #333;
    z-index: 1;
  }

  #myLinks a {
    display: block;
    color: white;
    padding: 10px;
    text-align: center;
    font-size: 18px;
  }

  #myLinks a.active {
    font-weight: bold;
  }

  #myLinks a:hover {
    text-decoration: underline;
  }

  .mobile-nav.active #myLinks {
    display: block;
  }
}
    
