<!-- views/newUser.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>New User</title>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
  <style>
    body {
      background-color: #f8f8f8;
      font-family: 'Open Sans', sans-serif;
    }

    .container {
      max-width: 500px;
      margin: 0 auto;
      padding: 20px;
      border-radius: 5px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
      margin-top: 0;
      font-weight: 700;
      color: #d9534f;
      text-align: center;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    label {
      margin-top: 10px;
      margin-bottom: 5px;
      font-weight: 700;
      color: #d9534f;
    }

    input[type="text"]{
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
      font-size: 16px;
      color: #555;
    }

    input[type="submit"] {
      margin-top: 20px;
      padding: 10px;
      border: none;
      border-radius: 3px;
      background-color: #d9534f;
      color: #fff;
      font-size: 16px;
      font-weight: 700;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #c9302c;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Create New User</h1>
    <form method="post" action="/users">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required>

      <!-- Add more input fields for the new user details here -->

      <input type="submit" value="Create User">
    </form>
  </div>
</body>
</html>
