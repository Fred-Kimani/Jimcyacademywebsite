<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/logoacad.png">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        input[type=text], select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }
        
        input[type=submit] {
          width: 100%;
          background-color: #4CAF50;
          color: white;
          padding: 14px 20px;
          margin: 8px 0;
          border: none;
          border-radius: 4px;
          cursor: pointer;
        }
        
        input[type=submit]:hover {
          background-color: #45a049;
        }
        
        div {
          border-radius: 5px;
          background-color: #f2f2f2;
          padding: 20px;
        }
        </style>

<style>
  footer {
display: flex;
justify-content: center;
background-color:#1987c7;
color: white;
padding: 20px;
}

.footer-column {
flex-basis: 50%;
text-align: center;
}

.footer-column h3 {
margin-top: 0;
}

.footer-column a {
display: block;
color: rgb(0, 0, 0);
text-decoration: none;
margin-bottom: 10px;
}

.footer-column a.active {
font-weight: bold;
}

.footer-column a:hover {
text-decoration: underline;
color: rgb(0, 204, 255);
}

</style>

    <title>Edit contact details</title>
</head>
<body>
    <div>
        <form method="post" action="/updatecontacts/<%= contact.id%>" enctype="multipart/form-data">
      
          <label for="details">Contact Details</label>
          <input type="text" id="details" name="details" placeholder="Contact Details" value="<%= contact.details%>">

          <label for="details">More about this mode of communication</label>
          <input type="text" id="preference" name="preference" placeholder="e.g send a whatsapp message to this number" value="<%= contact.preference%>">

          <div class="form-group">
            <label for="image">Change Image</label>
            <input type="file" name="image" class="form-control">
            <input type="hidden" name="old_image" value="<%= contact.image %>">
            <img src="/<%= contact.image %>" width="100" class="img-thumbnail mt-1">
          </div>
      
        
          <input type="submit" value="Submit" onclick="return confirm('Save changes?')">
        </form>
      </div>

      <footer>
        <div class="footer-column">
    
          <a href="/adminhome">Home</a>
          <a href="/adminabout">About</a>
          <a href="/admincontacts">Contacts</a>
          <% if (user.role === 'superadmin') { %>
            <a href="/users">Add an admin</a>
            <a href="/manage-users" class="active">Manage users</a>
          <% } %>
          <a href="/settings">Settings</a>
    </div>
    </footer>
</body>
</html>