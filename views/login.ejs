<style>
    body {
      background-color: #f8f8f8;
    }
    
    .card {
      border: none;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
      background-color: #fff;
    }
    
    .card-header {
      background-color: #ff4444;
      color: #fff;
      font-size: 24px;
      font-weight: bold;
      text-align: center;
      padding: 20px 0;
      border-radius: 10px 10px 0 0;
    }
    
    .card-body {
      padding: 30px;
    }
    
    .form-group {
      margin-bottom: 25px;
    }
    
    label {
      font-weight: bold;
    }
    
    .form-control {
      height: 50px;
      border-radius: 25px;
      font-size: 18px;
    }
    
    .btn-primary {
      background-color: #ff4444;
      border-color: #ff4444;
      font-weight: bold;
      border-radius: 25px;
      height: 50px;
      font-size: 18px;
    }
    
    .btn-primary:hover {
      background-color: #ff6666;
      border-color: #ff6666;
    }
    
    .lead {
      text-align: center;
      font-size: 18px;
    }
    
    a {
      color: #ff4444;
      font-weight: bold;
    }
    
    a:hover {
      text-decoration: none;
      color: #ff6666;
    }
    </style>
    
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login (Site Admins Only)</h1>
            <%- include ("./partials/messages") %>
            <form action="/login" method="POST">
              <div class="form-group text-center">
                <label for="username">Username</label>
                <input
                  type="username"
                  id="username"
                  name="username"
                  class="form-control"
                  placeholder="Enter username"
                />
              </div>
              <div class="form-group text-center">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter Password"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block text-center">Login</button>
            </form>

          </div>
        </div>
      </div>
      
    