<!-- views/password_reset.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Password Reset</title>
    <link rel="icon" href="/images/logoacad.png">

    <style>
        body {
          background-color: #f8f8f8;
          font-family: Arial, sans-serif;
        }
  
        h1 {
          color: #d00;
        }
  
        label {
          display: block;
          margin-bottom: 10px;
          font-size: 16px;
          color: #d00;
        }
  
        input[type="email"] {
          display: block;
          width: 100%;
          padding: 10px;
          border: 2px solid #d00;
          border-radius: 5px;
          font-size: 16px;
          margin-bottom: 20px;
        }
  
        button[type="submit"] {
          background-color: #d00;
          color: #fff;
          padding: 10px 20px;
          border: none;
          border-radius: 5px;
          font-size: 16px;
          cursor: pointer;
        }
  
        button[type="submit"]:hover {
          background-color: #c00;
        }
  
        p.error {
          color: #d00;
        }
  
        p.success {
          color: #0d0;
        }
      </style>
  </head>
  <body>
    <% if (typeof error !== 'undefined') { %>
        <p style="color: red;"><%= error %></p>
      <% } else if (typeof success !== 'undefined') { %>
        <p style="color: green;"><%= success %></p>
      <% } %>
    <form method="POST" action="/accountsettings/password_reset">
      <label for="email">Email:</label>
      <input type="username" id="username" name="username" required>
      <button type="submit">Reset Password</button>
    </form>
  </body>
</html>
